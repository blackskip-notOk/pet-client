{
	"$schema": "https://biomejs.dev/schemas/1.3.3/schema.json",
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineWidth": 120
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"jsxQuoteStyle": "single",
			"trailingComma": "none",
			"semicolons": "asNeeded",
			"arrowParentheses": "asNeeded",
			"indentStyle": "tab",
			"indentWidth": 4,
			"lineWidth": 120
		}
	},
	"json": {
		"formatter": {
			"indentStyle": "tab",
			"indentWidth": 4,
			"lineWidth": 120
		}
	}
}
