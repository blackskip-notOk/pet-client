{
	"$schema": "https://biomejs.dev/schemas/1.3.3/schema.json",
	"extends": ["./formatter.json", "./linter.json"],
	"files": {
		"ignoreUnknown": true,
		"include": [
			"./src/**/*.ts",
			"./src/**/*.tsx",
			"./configs/vite/proxy.ts",
			"./vite.config.ts",
			"./tsconfig.json",
			"./biome.json",
			"./formatter.json",
			"./linter.json",
			"./package.json",
			"./.stylelintrc.json",
			"./.stylelintignore",
			"./.lintstagedrc.json",
			"./.vscode/settings.json",
			"./playwright.config.ts",
			"./tests/**/*.ts"
		]
	},
	"javascript": {
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	},
	"json": {
		"parser": {
			"allowComments": true,
			"allowTrailingCommas": false
		}
	},
	"organizeImports": {
		"enabled": true
	},
	"vcs": {
		"clientKind": "git",
		"enabled": true,
		"useIgnoreFile": true
	}
}
